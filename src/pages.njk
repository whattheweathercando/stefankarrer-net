---
layout: base
pagination:
    data: all
    size: 1
    alias: item
permalink: "/d/{{ item.slug }}/"
---
{# permalink: "/d/{{ item.title | slug }}/" #}


 <div class="info-subpage">
    <h1 class="title">{{ item.title }}{% if item.location %}, {{ item.location }}{% endif %}</h1>
    {% if item.lead %}
        <div class="lead-text">{{ item.lead | nl2br | markdown | safe }}</div>
    {% endif %}
</div>

{% if item.body %}
    <div class="body-text">{{ item.body | nl2br | markdown | safe }}</div>
{% endif %} 

{% if item.images %}
    <div class="images-container">
    {% for image in item.images %}
        {% image image.url, item.title, "100vw" %}
    {% endfor %}
    </div>
{% endif %}
